<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.testapigoogle.MapsActivity">

            <Button
                android:onClick="pub"
                android:id="@+id/btnPublicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="Publicar Evento"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:paddingRight="10dp"/>
            <TextView
                android:id="@+id/txtIndMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:text="Tap en el lugar del evento"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/wallet_bright_foreground_holo_dark"
                android:background="@color/colorPrimaryDark"
                android:paddingRight="10dp"/>
    </fragment>
